<figure class="figure heroimage">
  <% if (storyHeroVideo.src !== '') { %>
    <amp-video
      controls
      width="1.48"
      height="1"
      layout="responsive"
      src="<%= storyHeroVideo.src %>"
      poster="<%= storyHeroImage.src %>"
    >
      <div fallback>
        <p>This browser does not support the video element.</p>
      </div>
    </amp-video>
      <% } else { %>
    <amp-img
      src="<%= storyHeroImage.src %>"
      width="1.47"
      height="1"
      layout="responsive"
    >
    </amp-img>
  <% } %>
  <figcaption class="figure__figcaption heroimage__caption"><%= storyHeroImage.caption %></figcaption>
</figure>